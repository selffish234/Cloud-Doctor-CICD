# Patient Backend Environment Variables

# Server
NODE_ENV=production
PORT=3000

# Database (RDS MySQL)
DB_HOST=cloud-doctor-patient-db.xxxx.eu-west-1.rds.amazonaws.com
DB_PORT=3306
DB_NAME=patient_db
DB_USER=admin
DB_PASSWORD=SecurePassword123!

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Logging
LOG_LEVEL=info

# Chaos Testing (set to true to enable failure scenarios)
CHAOS_MODE=false
